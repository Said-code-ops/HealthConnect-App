<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/layout_back"
    android:layout_height="match_parent"
    tools:context=".SignInOrSignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="480dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/hconnectlogo6_phone" />


    </RelativeLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_radius"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-55dp"
        android:background="@drawable/card_background"
        android:layout_height="490dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textStyle="bold"
            android:text="@string/welcome"
            android:textSize="30sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/welcome_note"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="sans-serif-condensed"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="145dp"
                android:text="@string/sign_in"
                android:id="@+id/sign_in_btn"
                android:textColor="@color/white"
                android:background="@drawable/sign_in_btn_back"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="6dp"
                android:textSize="18sp"
                android:layout_height="60dp">
            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="145dp"
                android:id="@+id/sign_up_btn"
                android:text="@string/sign_up"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/signup_in_btn_back"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:layout_height="60dp">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>