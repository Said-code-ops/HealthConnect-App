<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/layout_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorOnBoarding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hconnect_pc" />
    </RelativeLayout>

    <View
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:background="#E9EDEE"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        android:layout_height="10dp"/>

    <TextView
        android:id="@+id/book_Info"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="125dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="5sp"
        android:text="Connect with Doctors\n Anytime, Anywhere"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textSize="25sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/getStart_bookDoc"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_below="@id/book_Info"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="-15dp"
        android:backgroundTint="#012A30"
        android:hint="Get Started!"
        android:letterSpacing="0.02"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />



</LinearLayout>